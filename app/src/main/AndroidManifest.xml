<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.sistemassac.juegoabc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".inicio">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".seleccion_niveles"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_seleccion_niveles"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".nivel1"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_nivel1"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".nivel2"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_nivel2"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".nivel3"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_nivel3"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".resultados"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_resultados"
            android:theme="@style/FullscreenTheme"></activity>
    </application>

</manifest>
